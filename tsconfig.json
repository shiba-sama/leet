   // Compiler

      "noEmit": false,          // REQUIRED: `"noEmit": false
      "module": "esnext",       // REQUIRED: "module": "esnext"
      "outDir": "./build/",
      "rootDir": "./src",
      "target": "esnext",
      "lib": ["DOM", "ESNext"]

   }
}
